<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>

<SplitPane dividerPositions="0.23" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <items>
      <VBox>
         <children>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="432.0" prefWidth="175.0">
               <children>
                  <Button fx:id="todayButton" layoutX="17.0" layoutY="24.0" mnemonicParsing="false" onAction="#todayButtonClicked" prefHeight="26.0" prefWidth="147.0" text="Сегодня" />
                  <Button fx:id="tomorrowButton" layoutX="17.0" layoutY="63.0" mnemonicParsing="false" onAction="#tomorrowButtonClicked" prefHeight="26.0" prefWidth="147.0" text="Завтра" />
                  <Button fx:id="weekButton" layoutX="17.0" layoutY="103.0" mnemonicParsing="false" onAction="#weekButtonClicked" prefHeight="26.0" prefWidth="147.0" text="Неделя" />
                  <Button fx:id="completedButton" layoutX="17.0" layoutY="141.0" mnemonicParsing="false" onAction="#completedButtonClicked" prefHeight="26.0" prefWidth="147.0" text="Выполненые" />
                  <Button fx:id="toMenu" layoutX="17.0" layoutY="350.0" mnemonicParsing="false" onAction="#toMenuClicked" prefHeight="26.0" prefWidth="147.0" text="Настройки" />
                  <Button fx:id="toTimer" layoutX="16.0" layoutY="314.0" mnemonicParsing="false" onAction="#toTimerClicked" prefHeight="26.0" prefWidth="147.0" text="Таймер фокусировки" />
                  <Button fx:id="toHabbits" layoutX="17.0" layoutY="278.0" mnemonicParsing="false" onAction="#toHabbitsClicked" prefHeight="26.0" prefWidth="147.0" text="Трекер привычек" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
         <children>
            <Button fx:id="addButton" layoutX="375.0" layoutY="47.0" mnemonicParsing="false" onAction="#addButtonClicked" prefHeight="26.0" prefWidth="26.0" text="+" />
            <DatePicker fx:id="dateField" layoutX="228.0" layoutY="13.0" />
            <Label fx:id="statusLabel" layoutX="24.0" layoutY="18.0" prefHeight="18.0" prefWidth="167.0" />

            <ScrollPane styleClass="scroll-pane"
                  nodeOrientation="RIGHT_TO_LEFT"
                  AnchorPane.leftAnchor="27.0"
                  AnchorPane.topAnchor="75.0"
                  maxHeight="400">
               <content>
                  <VBox fx:id="taskList">
                     <children>
                        <!-- TASK LIST -->
                     </children>
                  </VBox>
               </content>
            </ScrollPane>

            <TextField fx:id="titleTextField" layoutX="24.0" layoutY="48.0" prefHeight="26.0" prefWidth="97.0" promptText="Название" />
            <TextField fx:id="descriptionTextField" layoutX="122.0" layoutY="48.0" prefWidth="200" promptText="Описание" />
         </children>
      </AnchorPane>
  </items>
</SplitPane>
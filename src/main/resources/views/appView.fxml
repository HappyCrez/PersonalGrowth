<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>

<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane styleClass="border-pane"
            stylesheets="@../css/appViewStyle.css"
            xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    
    <!-- LEFT BAR GROUPS -->
    <left>
    <AnchorPane styleClass="leftBarBG">
        <children>
            <ScrollPane styleClass="groupBG"
                        AnchorPane.topAnchor="0.0"
                        AnchorPane.bottomAnchor="70.0"
                        AnchorPane.leftAnchor="0.0">
            <content>
                <VBox   styleClass="groupList">
                <children>
                    <AnchorPane styleClass="groupItem">
                    <children>
                        <Label  AnchorPane.topAnchor="0.0"
                                AnchorPane.bottomAnchor="0.0"
                                AnchorPane.leftAnchor="0.0">
                            Tasks
                        </Label>
                        <Button styleClass="deleteGroup"
                                AnchorPane.topAnchor="0.0"
                                AnchorPane.bottomAnchor="0.0"
                                AnchorPane.rightAnchor="0.0">
                            <graphic>
                                <FontIcon iconLiteral="mdi-delete-forever"/>
                            </graphic>
                        </Button>
                    </children>
                    </AnchorPane>
                    <AnchorPane styleClass="groupItem">
                    <children>
                        <Label  AnchorPane.topAnchor="0.0"
                                AnchorPane.bottomAnchor="0.0"
                                AnchorPane.leftAnchor="0.0">
                            Group#1
                        </Label>
                        <Button styleClass="deleteGroup"
                                AnchorPane.topAnchor="0.0"
                                AnchorPane.bottomAnchor="0.0"
                                AnchorPane.rightAnchor="0.0">
                            <graphic>
                                <FontIcon iconLiteral="mdi-delete-forever"/>
                            </graphic>
                        </Button>
                    </children>
                    </AnchorPane>
                    <AnchorPane styleClass="groupItem">
                    <children>
                        <Label  AnchorPane.topAnchor="0.0"
                                AnchorPane.bottomAnchor="0.0"
                                AnchorPane.leftAnchor="0.0">
                            Group#2
                        </Label>
                        <Button styleClass="deleteGroup"
                                AnchorPane.topAnchor="0.0"
                                AnchorPane.bottomAnchor="0.0"
                                AnchorPane.rightAnchor="0.0">
                            <graphic>
                                <FontIcon iconLiteral="mdi-delete-forever"/>
                            </graphic>
                        </Button>
                    </children>
                    </AnchorPane>
                </children>
                </VBox>
            </content>
            </ScrollPane>
            <HBox   styleClass="movsBox"
                    AnchorPane.bottomAnchor="10.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.leftAnchor="10.0">
                <children>
                    <Button styleClass="movBtn" fx:id="toSettings"
                            onAction="#toSettingsClicked">
                        <graphic>
                            <FontIcon iconLiteral="mdi-settings"/>
                        </graphic>
                    </Button>
                    <Button styleClass="movBtn" fx:id="toTimer"
                            onAction="#toTimerClicked"   >
                        <graphic>
                            <FontIcon iconLiteral="mdi-clock"/>
                        </graphic>
                        Timer
                    </Button>
                </children>
            </HBox>
        </children>
        </AnchorPane>
    </left>

    <center>
        <HBox   fx:id="centerView"
                styleClass="center-view">
        <children>
            <!-- TO DO LIST -->
            <ScrollPane styleClass="task-scroll">
                <content>
                    <VBox fx:id="taskList">
                    <children>
                        <AnchorPane styleClass="taskForm">
                            <children>
                                <TextArea fx:id="contentField"
                                    AnchorPane.leftAnchor="0.0"
                                    AnchorPane.topAnchor="0.0"
                                    AnchorPane.bottomAnchor="0.0"/>
                                <Button fx:id="addButton" onAction="#addTask"
                                    AnchorPane.rightAnchor="10.0"
                                    AnchorPane.bottomAnchor="0.0">
                                    <graphic>
                                        <FontIcon styleClass="small-icon" iconLiteral="mdi-plus"/>
                                    </graphic>
                                </Button>
                            </children>
                        </AnchorPane>

                        <!-- TASK LIST -->

                    </children>
                    </VBox>
                </content>
            </ScrollPane>
            
            <!--    CalendarBox    -->
            
        </children>
        </HBox>
    </center>
</BorderPane>